{% load page_url %}
{% autoescape off %}
{% spaceless %}
{
	"documents" : [
		{% for doc in documents %}
		{ 
			"title" : "{{doc.title}}",
			"document_url" : "{{doc.get_absolute_url}}",
			"tags_string"  : "{% for tag in doc.tag_set.all %}{{tag.label|escapejs}}{% if not forloop.last %}, {% endif %}{% endfor %}",
			"page_count" : "{{doc.bindings.count}}",
			"title_page_img_url" : "{% for binding in doc.bindings.all %}{% if forloop.first %}{% page_url binding viewtype as page %}{{page}}{% endif %}{% endfor %}"
		}{% if not forloop.last %},{% endif %}
		{% endfor %}
	]
}
{% endspaceless %}
{% endautoescape %}